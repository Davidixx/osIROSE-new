<packet ePacketType = "PAKWC_DAMAGE">
    <includeXml path = "item.xml" />

    <element name = "attackerId" type = "uint16_t" />
    <element name = "defenderId" type = "uint16_t" />
    <element name = "damage" type = "uint32_t" />
    <element name = "action" type = "DamageAction" />

    <!-- Drop info -->
    <element name = "x" type = "float" default = "0.f" />
    <element name = "y" type = "float" default = "0.f" />
    <element name = "item" type = "Item" default = "{}" />
    <element name = "id" type = "uint16_t" default = "0" />
    <element name = "ownerId" type = "uint16_t" default = "0" />

    <simpleType name = "DamageAction">
        <restriction base = "uint32_t">
            <enumeration value = "NONE" id = "0" />
            <enumeration value = "RESERVED" id = "1" />
            <enumeration value = "IMMEDIATE" id = "2" />
            <enumeration value = "HIT" id = "4" />
            <enumeration value = "CRITICAL" id = "8" />
            <enumeration value = "TARGET_DEAD" id = "16" />
        </restriction>
    </simpleType>
</packet>
