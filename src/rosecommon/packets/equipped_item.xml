<simpleType name = "EquippedPosition">
    <restriction base = "uint8_t">
        <enumeration value = "HELMET" />
        <enumeration value = "ARMOR" />
        <enumeration value = "GAUNTLET" />
        <enumeration value = "BOOTS" />
        <enumeration value = "GOOGLES" />
        <enumeration value = "BACKPACK" />
        <enumeration value = "WEAPON_R" />
        <enumeration value = "WEAPON_L" />
        <enumeration value = "MAX_ITEMS" />
    </restriction>
</simpleType>

<complexType name = "EquippedItem">
    <choice>
        <sequence inline = "true">
            <element name = "id" type = "unsigned int" bits = "10" />
            <element name = "gem_opt" type = "unsigned int" bits = "9" />
            <element name = "socket" type = "unsigned int" bits = "1" />
            <element name = "grade" type = "unsigned int" bits = "4" />
        </sequence>
        <element name = "data" type = "uint32_t" />
    </choice>
</complexType>
