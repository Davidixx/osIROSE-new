<packet ePacketType = "PAKWC_QUEST_DATA">
    <include path = "dataconsts.h" />
    <includeXml path = "item.xml" />
    <element name = "episode" type = "uint16_t" occurs = "MAX_CONDITIONS_EPISODE" default = "{0}" />
    <element name = "job" type = "uint16_t" occurs = "MAX_CONDTIONS_JOB" default = "{0}" />
    <element name = "planet" type = "uint16_t" occurs = "MAX_CONDITIONS_PLANET" default = "{0}" />
    <element name = "union" type = "uint16_t" occurs = "MAX_CONDITIONS_UNION" default = "{0}" />
    <element name = "quests" type = "Quest" occurs = "MAX_QUESTS" default = "{}" />
    <element name = "switches" type = "uint32_t" occurs = "MAX_SWITCHES" default = "{0}" />

    <complexType name = "Quest">
        <sequence>
            <element name = "id" type = "uint16_t" default = "0" />
            <element name = "timer" type = "uint32_t" default = "0">
                <documentation>timer: Unlimited if 0</documentation>
            </element>
            <element name = "vars" type = "uint32_t" occurs = "MAX_QUEST_VARS" default = "{0}" />
            <element name = "switches" type = "uint32_t" default = "0" />
            <element name = "items" type = "Item" occurs = "MAX_QUEST_ITEMS" />
        </sequence>
    </complexType>
</packet>
